@using Dominio;
@{
    ViewData["Title"] = "ListarPublicaciones";
}

<h1 class="text-center">Publicaciones</h1>

<br />
<br />

<!-- ver con ayudantia con ayudantía para que en la columna salga el tipo de publicacion venta o subasta y metodos en el controller -->


<form class="row row-cols-lg-auto g-3 align-items-center" method="get" action="/publicaciones/porpublicaciones">
    <div class="col-12">
        <input class="form-control" type="text" placeholder="Ingrese tipo de publicacion" name="publicacion" />
    </div>

    <div class="col-12">
        <input class="btn btn-success" type="submit" value="Buscar" />
    </div>

    <div class="col-12">
        <a href="/publicaciones/porpublicaciones" class="btn btn-secundary">Reiniciar</a>
    </div>
</form>


@if (ViewBag.ListadoPublicaciones == null || ViewBag.ListadoPublicaciones.Count == 0)
{
    <div class="alert alert-danger"><p>No hay articulos en el sistema</p></div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Tipo Publicacion</th>
                <th>Categoría</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Publicacion p in ViewBag.ListadoPublicaciones)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nombre</td>
                    <td>@p.Articulos </td> 
                    <td>@p.Estado</td>
                    <td>@p.CalcularPrecio()</td>
                </tr>
            }
        </tbody>
    </table>
}