@using Dominio;
@{
    ViewData["Title"] = "VistaVentas";
}

<h1 class="text-center">Ventas</h1>

<br />
<br />

@if (ViewBag.ListadoArticulosVenta == null || ViewBag.ListadoArticulosVenta.Count == 0)
{
    <div class="alert alert-danger"><p>No hay articulos en el sistema</p></div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Articulo a in ViewBag.ListadoArticulosVenta)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Nombre</td>
                    <td>@a.Categoria</td>
                    <td>@a.Precio</td>
                </tr>
            }            
        </tbody>
    </table>
}